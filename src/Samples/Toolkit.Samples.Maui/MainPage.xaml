<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             xmlns:esriTK="clr-namespace:Esri.ArcGISRuntime.Toolkit.Maui;assembly=Esri.ArcGISRuntime.Toolkit.Maui"
             x:Class="Toolkit.Samples.MAUI.MainPage"
             Title="Toolkit Samples (Maui)">

    <Grid>
        <esri:MapView x:Name="mapView" />
        <esriTK:Compass GeoView="{x:Reference mapView}" AutoHide="False" />
        <esriTK:ScaleLine MapView="{x:Reference mapView}" />
    </Grid>

</ContentPage>
