<UserControl x:Class="Esri.ArcGISRuntime.Toolkit.Samples.BasemapGallery.BasemapGalleryAppearanceSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013" >
    <Grid>
        <esri:MapView x:Name="MainMapView" Map="{Binding Map}" />

        <Button Margin="10"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Red"
                Click="Button_Click"
                Content="PRESS ME to reload AvailableBasemaps for the Gallery" />

        <esri:BasemapGallery x:Name="BasemapGallery"
                             Margin="4"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Top"
                             GeoModel="{Binding ElementName=MainMapView, Path=Map}" />
    </Grid>
</UserControl>
