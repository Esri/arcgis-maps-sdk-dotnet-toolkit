<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Xamarin.Forms;assembly=Esri.ArcGISRuntime.Xamarin.Forms"
             xmlns:esriTK="clr-namespace:Esri.ArcGISRuntime.Toolkit.Xamarin.Forms;assembly=Esri.ArcGISRuntime.Toolkit.Xamarin.Forms"
             x:Class="Toolkit.Samples.Forms.Samples.LayerLegendSample" 
             Title="LayerLegend (Obsolete - use Legend instead)">
    <ContentPage.Content>
        <Grid SizeChanged="Grid_SizeChanged">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <esriUI:MapView x:Name="mapView" Grid.ColumnSpan="2" />
            
            <esriTK:LayerLegend x:Name="layerLegend" Grid.Row="1" Grid.ColumnSpan="2" />

        </Grid>
    </ContentPage.Content>
</ContentPage>