<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui"
             xmlns:esriTK="clr-namespace:Esri.ArcGISRuntime.Toolkit.Maui;assembly=Esri.ArcGISRuntime.Toolkit.Maui"
             x:Class="Toolkit.SampleApp.Maui.Samples.PopupViewerSample" Title="PopupViewer">
    <ContentPage.Content>
        <Grid>
            <esriUI:MapView x:Name="mapView" />


            <Border Background="#99ffffff" x:Name="popupPanel" IsVisible="False">
                <Border HorizontalOptions="Center" VerticalOptions="Center" MaximumWidthRequest="400" MaximumHeightRequest="400" Background="White" Margin="0,50" Padding="20">
                    <Grid>
                        <esriTK:PopupViewer x:Name="popupViewer" Margin="20" PopupAttachmentClicked="popupViewer_PopupAttachmentClicked" />
                        <Button BorderWidth="0" Text="X" HorizontalOptions="End" VerticalOptions="Start" Clicked="CloseButton_Click" BackgroundColor="Transparent" TextColor="Black" Margin="5" />
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </ContentPage.Content>
</ContentPage>