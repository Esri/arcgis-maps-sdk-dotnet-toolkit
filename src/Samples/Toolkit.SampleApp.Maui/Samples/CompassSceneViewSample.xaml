<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui"
             xmlns:esriTK="clr-namespace:Esri.ArcGISRuntime.Toolkit.Maui;assembly=Esri.ArcGISRuntime.Toolkit.Maui"
             x:Class="Toolkit.SampleApp.Maui.Samples.CompassSceneViewSample" Title="Compass - SceneView">
    <ContentPage.Content>
        <Grid>
            <esriUI:SceneView x:Name="sceneView" />

            <esriTK:Compass HorizontalOptions="End" VerticalOptions="Start" Margin="20"
                    GeoView="{x:Reference sceneView}" WidthRequest="30" HeightRequest="30"
                    AutoHide="False" x:Name="compass" />
        </Grid>
    </ContentPage.Content>
</ContentPage>