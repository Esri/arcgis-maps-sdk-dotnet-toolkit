<UserControl x:Class="Esri.ArcGISRuntime.Toolkit.Samples.SearchView.SearchViewSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Esri.ArcGISRuntime.Toolkit.Samples.SearchView"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <esri:MapView x:Name="MyMapView" />
        <esri:SearchView GeoView="{Binding ElementName=MyMapView}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" />
    </Grid>
</UserControl>
