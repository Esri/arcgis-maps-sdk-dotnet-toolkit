<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Esri.ArcGISRuntime.Toolkit.UI.Controls">

    <Style TargetType="controls:SymbolDisplay" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:SymbolDisplay">
                    <Image x:Name="image" Stretch="Fill" MaxWidth="40" MaxHeight="40"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
