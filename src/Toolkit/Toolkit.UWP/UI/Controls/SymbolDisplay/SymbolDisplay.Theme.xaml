<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Esri.ArcGISRuntime.Toolkit.UI.Controls">

    <Style TargetType="controls:SymbolDisplay" >
      <Setter Property="HorizontalAlignment" Value="Center" />
      <Setter Property="VerticalAlignment" Value="Center" />
       <Setter Property="BorderThickness" Value="0" />
       <Setter Property="BorderBrush" Value="Transparent" />
       <Setter Property="Background" Value="Transparent" />
       <Setter Property="Padding" Value="0" />
       <Setter Property="Margin" Value="0" />
       <Setter Property="Template">
           <Setter.Value>
              <ControlTemplate TargetType="controls:SymbolDisplay">
                 <Border BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Background="{TemplateBinding Background}">
                     <Image x:Name="image" Stretch="Uniform" Margin="{TemplateBinding Padding}"/>
                 </Border>
              </ControlTemplate>
          </Setter.Value>
       </Setter>
    </Style>
</ResourceDictionary>
